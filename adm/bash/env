#!/bin/bash

# Check if the user provided the required arguments
if [ $# -ne 2 ]; then
  echo "Usage: $0 <file_path> <variable_name>"
  exit 1
fi

# Get the file path and variable name from the arguments
file_path=$1
var_name=$2

# Check if the file exists
if [ ! -f "$file_path" ]; then
  echo "File '$file_path' does not exist."
  exit 1
fi

# Read the file line by line
while IFS='=' read -r name value; do
  # Check if the current variable matches the specified variable name
  if [ "$name" = "$var_name" ]; then
    echo "$name=$value"
    exit 0
  fi
done < "$file_path"

# If the variable was not found in the file
echo "Variable '$var_name' not found in file '$file_path'."
exit 1
